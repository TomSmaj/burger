<h1>These Are Burgers</h1>

<h2>Fresh Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
     {{burgers.burger_name}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been Devoured</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    {{burgers.burger_name}} 
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Type:</label>
    <input type="text" id="bu" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
